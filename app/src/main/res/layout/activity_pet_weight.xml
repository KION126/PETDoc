<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 나중에 등록하기 버튼 -->
    <ImageView
        android:id="@+id/imgRegisterLater"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="나중에 등록하기"
        android:focusable="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:src="@drawable/ic_register_later"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/progressContainer"
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgRegisterLater">

        <!-- 트랙 배경 -->
        <ImageView
            android:id="@+id/progressBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_step_progress_bar1" />

        <!-- 채워진 진행 트랙 -->
        <ImageView
            android:id="@+id/progressFill"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/ic_progress_filled3" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imgPetWeightTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="아이 무게 입력 타이틀"
        android:src="@drawable/enter_pet_weight_label"
        app:layout_constraintTop_toBottomOf="@+id/progressContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/weightInputGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imgPetWeightTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <!-- 무게 입력 + 단위 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 입력 EditText -->
            <EditText
                android:id="@+id/edtWeight"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="예: 5.3"
                android:background="@null"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textSize="16sp"
                android:maxLines="1"
                android:gravity="end"
                android:paddingBottom="4dp" />

            <!-- kg 라벨 -->
            <TextView
                android:id="@+id/labelKg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- 밑줄 -->
        <ImageView
            android:id="@+id/underline"
            android:layout_width="281dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/bg_input_underline" />
    </LinearLayout>


    <!-- 이전 버튼 -->
    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:contentDescription="이전"
        android:src="@drawable/ic_arrow_back2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNext" />

    <!-- 다음 버튼 -->
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:contentDescription="다음"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPrev"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
