<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:layout_marginBottom="16dp">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/eye_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종합 안구 건강도"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#222222"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"/>

    <!-- 카드 스타일 블록 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_bg"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="2dp"
        android:gravity="center">

        <!-- 왼쪽 눈 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:id="@+id/left_eye_indicator"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_bg"
                android:contentDescription="왼쪽 눈 상태 표시" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="왼쪽"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/left_eye_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="1dp"
            android:layout_height="44dp"
            android:background="#EEEEEE"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>

        <!-- 오른쪽 눈 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:id="@+id/right_eye_indicator"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_bg"
                android:contentDescription="오른쪽 눈 상태 표시" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오른쪽"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/right_eye_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#888888"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ⬇️ 상세 예측 결과를 위한 텍스트 뷰(추가) -->
    <TextView
        android:id="@+id/summary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:textColor="#222222"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp"
        android:lineSpacingExtra="2dp"
        android:gravity="start"/>
</LinearLayout>
