<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eye_result_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rounded_white_background"
    android:elevation="6dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/eye_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="항목 제목"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- 왼쪽 눈 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/left_eye_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"
                android:background="@drawable/square_gray_bg"
                android:clipToOutline="true"
                android:contentDescription="왼쪽 눈 이미지" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="왼쪽"
                android:textSize="11sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/left_eye_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#2196F3"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- 오른쪽 눈 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/right_eye_image"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"
                android:background="@drawable/square_gray_bg"
                android:clipToOutline="true"
                android:contentDescription="오른쪽 눈 이미지" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오른쪽"
                android:textSize="11sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/right_eye_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택안함"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#888888"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
