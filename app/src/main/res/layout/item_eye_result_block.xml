<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/eye_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종합 안구 건강도"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_bg"
        android:orientation="horizontal"
        android:padding="12dp"
        android:elevation="2dp">

        <!-- 왼쪽 눈 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:id="@+id/left_eye_indicator"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_bg"
                android:contentDescription="왼쪽 눈 상태 표시" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="왼쪽"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/left_eye_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 오른쪽 눈 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:id="@+id/right_eye_indicator"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_bg"
                android:contentDescription="오른쪽 눈 상태 표시" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오른쪽"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/right_eye_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택안함"
                android:textColor="#888888"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
