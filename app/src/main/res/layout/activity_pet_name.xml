<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp">

    <!-- 나중에 등록하기 버튼 (상단 오른쪽 살짝 아래로 이동) -->
    <ImageView
        android:id="@+id/imgRegisterLater"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:src="@drawable/ic_register_later"
        android:contentDescription="나중에 등록하기"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 진행 바 -->
    <FrameLayout
        android:id="@+id/progressContainer"
        android:layout_width="100dp"
        android:layout_height="4dp"
        android:layout_marginTop="78dp"
        app:layout_constraintTop_toBottomOf="@id/imgRegisterLater"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/progressBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_step_progress_bar1" />


        <ImageView
            android:id="@+id/progressFill"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:src="@drawable/ic_progress_filled" />
    </FrameLayout>

    <!-- 입력 타이틀 -->

    <TextView
        android:id="@+id/imgPetNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="아이의 이름을\n입력해주세요"
        android:textColor="#000000"
        android:textSize="27sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이름 입력 컨테이너 -->
    <FrameLayout
        android:id="@+id/nameInputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@id/imgPetNameTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/hintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/hint_enter_name"
            android:visibility="visible"
            android:contentDescription="아이 이름 힌트" />

        <EditText
            android:id="@+id/edtPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="이름을 입력하세요"
            android:background="@null"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:visibility="invisible"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <ImageView
            android:id="@+id/underline"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:layout_gravity="bottom"
            android:src="@drawable/bg_input_underline" />
    </FrameLayout>

    <!-- 하단 버튼 -->
    <LinearLayout
        android:id="@+id/layoutBottomBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_weight="0.2"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_next_disabled"
            android:textColor="@color/black"
            android:text="이전"
            android:textSize="20sp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_weight="1"
            android:background="@drawable/btn_basic"
            android:textColor="@color/btn_next_text_selector"
            android:enabled="false"
            android:text="다음"
            android:textSize="20sp"
            android:stateListAnimator="@null"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
