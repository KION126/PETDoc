<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 나중에 등록하기 버튼 -->


    <ImageView
        android:id="@+id/imgRegisterLater"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="나중에 등록하기"
        android:focusable="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:src="@drawable/ic_register_later"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgPetNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="아이 성별 입력 타이틀"
        android:src="@drawable/enter_pet_gender_label"
        app:layout_constraintTop_toBottomOf="@+id/progressTrack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- 배경 진행 트랙 -->
    <ImageView
        android:id="@+id/progressTrack"
        android:layout_width="95dp"
        android:layout_height="22dp"
        android:layout_marginTop="32dp"
        android:contentDescription="진행 상태 트랙"
        android:src="@drawable/ic_step_progress_bar1"
        app:layout_constraintTop_toBottomOf="@+id/imgRegisterLater"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 채워진 진행 트랙 -->



    <ImageView
        android:id="@+id/filledProgressTrack"
        android:layout_width="99dp"
        android:layout_height="4dp"
        android:layout_marginTop="8dp"
        android:contentDescription="채워진 트랙"
        android:src="@drawable/ic_progress_filled2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressTrack" />


    <ImageButton
        android:id="@+id/btnMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="360dp"
        android:background="@null"
        android:contentDescription="성별버튼"
        android:src="@drawable/ic_gender_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginBottom="360dp"
        android:background="@null"
        android:contentDescription="성별버튼"
        android:src="@drawable/ic_gender_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 검색 아이콘 추가 -->

    <!-- 위치 아이콘 추가 -->


    <ImageView
        android:id="@+id/imgSearch"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="240dp"
        android:contentDescription="남자 선택"
        android:src="@drawable/gender_male_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLocation"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="256dp"
        android:contentDescription="여자 미선택"
        android:src="@drawable/gender_female_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 남자 라벨 (선택됨) -->
    <ImageView
        android:id="@+id/labelMaleSelected"
        android:layout_width="16dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:contentDescription="남자 라벨 - 선택됨"
        android:src="@drawable/ic_male_on_label"
        app:layout_constraintTop_toBottomOf="@+id/btnMale"
        app:layout_constraintStart_toStartOf="@+id/btnMale"
        app:layout_constraintEnd_toEndOf="@+id/btnMale" />

    <!-- 여자 라벨 (미선택) -->
    <ImageView
        android:id="@+id/labelFemaleUnselected"
        android:layout_width="14dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        android:contentDescription="여자 라벨 - 미선택"
        android:src="@drawable/ic_female_off_label"
        app:layout_constraintTop_toBottomOf="@+id/btnFemale"
        app:layout_constraintStart_toStartOf="@+id/btnFemale"
        app:layout_constraintEnd_toEndOf="@+id/btnFemale" />


    <ImageView
        android:id="@+id/labelNeutered"
        android:layout_width="89dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:contentDescription="중성화를 했어요 라벨"
        android:src="@drawable/ic_neutering_off_label"
        app:layout_constraintBottom_toBottomOf="@+id/btnNeutered"
        app:layout_constraintStart_toEndOf="@+id/btnNeutered"
        app:layout_constraintTop_toTopOf="@+id/btnNeutered"
        app:layout_constraintVertical_bias="0.444" />

    <ImageButton
        android:id="@+id/btnNeutered"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:contentDescription="중성화 버튼"
        android:src="@drawable/ic_btn_eclipse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFemale" />

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:contentDescription="이전"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnNext" />

    <!-- 다음 버튼 -->
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@null"
        android:contentDescription="다음"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPrev"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
