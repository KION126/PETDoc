<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_white_background"
    android:elevation="4dp"
    android:padding="16dp"
    android:layout_marginTop="8dp">

    <!-- 항목 제목 -->
    <TextView
        android:id="@+id/eye_part_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안검염"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#000000" />

    <!-- 좌우 결과 블록 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <!-- 왼쪽 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/left_eye_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_eye_placeholder"
                android:background="@drawable/image_round_rect"
                android:contentDescription="왼쪽 눈" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="왼쪽"
                android:textSize="12sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/left_eye_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37%"
                android:textSize="14sp"
                android:textColor="#377DFF"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 오른쪽 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/right_eye_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_eye_placeholder"
                android:background="@drawable/image_round_rect"
                android:contentDescription="오른쪽 눈" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오른쪽"
                android:textSize="12sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/right_eye_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택안함"
                android:textSize="14sp"
                android:textColor="#888888"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
