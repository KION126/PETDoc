<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <View
        android:id="@+id/vectorBg"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:background="@drawable/bg_ai_check_wave"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.287"
        app:layout_constraintHorizontal_bias="0.0" />

    <!-- 중앙 텍스트 -->
    <TextView
        android:id="@+id/text_processing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안구 분석 중..."
        android:textColor="#FFFFFF"
        android:fontFamily="@font/notosanskr_medium"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/vectorBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vectorBg"
        app:layout_constraintVertical_bias="0.67" />
</androidx.constraintlayout.widget.ConstraintLayout>
