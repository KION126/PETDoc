<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 1. 상단 타이틀 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유전병 예측 결과"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025.04.21(월) 21:00"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"
            android:layout_gravity="center" />

        <!-- 2. 그래프 카드 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginHorizontal="19dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@android:color/white">

                    <!-- 견종 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="견종 1" />

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="10dp"
                            android:progress="87"
                            android:progressTint="#A77AF0"
                            android:layout_marginHorizontal="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="87%"
                            android:textColor="#A77AF0" />
                    </LinearLayout>

                    <!-- 견종 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="견종 2" />

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="10dp"
                            android:progress="50"
                            android:progressTint="#5C6BC0"
                            android:layout_marginHorizontal="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textColor="#5C6BC0" />
                    </LinearLayout>

                    <!-- 견종 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="견종 3" />

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="10dp"
                            android:progress="25"
                            android:progressTint="#E5B3AD"
                            android:layout_marginHorizontal="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25%"
                            android:textColor="#E5B3AD" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 3. 유전병 카드 리스트 -->
        <include layout="@layout/item_info_genetic" />
        <include layout="@layout/item_info_genetic" />
        <include layout="@layout/item_info_genetic" />
        <!-- 4. 하단 텍스트 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다른 견종의 유전병 정보 확인하기 →"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_gravity="right"
            android:layout_marginTop="24dp" />

        <!-- 5. 하단 버튼 (배경 이미지 또는 그라디언트 사용) -->
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:src="@drawable/btn_go_fast"
            android:background="@null"
            android:layout_marginTop="8dp"
            android:contentDescription="다시 한 번 과거로 떠나기" />

    </LinearLayout>
</ScrollView>
